<article>
  <a href="/menu/{{id}}" class="detail">
    <header>
      <figure>
        <img src="images/{{image}}" alt="menu-item">
      </figure>
      <h2 class="name">{{name}}</h2>
    </header>
    <p class="price">${{format_price price}}</p>
    <footer>
      <a href="#" class="add_cart">Add to cart</a>
    </footer>
  </a>
</article>